  <% listings.forEach(listing => { %>
    <div class="col-3 mb-4">
      <div class="card">
        <a href="/listings/<%= listing._id %>">
          <img src="<%= listing.image.url %>" class="card-img-top">
        </a>
        <div class="card-body">
          <h5><%= listing.title %></h5>
          <p>â‚¹ <%= listing.price %> / night</p>
        </div>
      </div>
    </div>
  <% }) %>
</div>
